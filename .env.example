# JobReady.ai Environment Configuration
# Copy this file to .env.local for development or set these values in your deployment environment

# ===========================================
# Application Configuration
# ===========================================

# Base URL of the application (used for SEO and absolute URLs)
NEXT_PUBLIC_BASE_URL=https://jobready.ai

# Application environment (development, staging, production)
NODE_ENV=production

# ===========================================
# API Configuration
# ===========================================

# Rate limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# API timeout in milliseconds
API_TIMEOUT_MS=10000

# ===========================================
# Job Board API Keys (Optional)
# ===========================================

# Remotive API (free tier available)
# REMOTIVE_API_KEY=

# Additional job board integrations (future)
# ARBEITNOW_API_KEY=
# NAUKRI_API_KEY=
# LINKEDIN_API_KEY=

# ===========================================
# Authentication (Production)
# ===========================================

# JWT Secret for production authentication
# Generate with: openssl rand -base64 32
# JWT_SECRET=your-secret-key-here

# Session cookie settings
# SESSION_COOKIE_NAME=jobready_session
# SESSION_COOKIE_SECURE=true

# ===========================================
# Database (Production)
# ===========================================

# PostgreSQL connection string (when migrating from localStorage)
# DATABASE_URL=postgresql://user:password@localhost:5432/jobready

# Redis for session storage and rate limiting
# REDIS_URL=redis://localhost:6379

# ===========================================
# Monitoring & Logging
# ===========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Error tracking (e.g., Sentry)
# SENTRY_DSN=

# ===========================================
# Email Service (Production)
# ===========================================

# Email provider for notifications
# EMAIL_FROM=noreply@jobready.ai
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# ===========================================
# Analytics
# ===========================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN=
